<% content_for :title, @event.title %>

<div class="card text-center">
  <div class="card-header">
  <% if current_user != nil %>
    <% if current_user.id == @event.administrator_id%>
      <ul class="nav nav-pills card-header-pills">
        <li class="nav-item">
          <a class="btn btn-info" href="<%= edit_event_registration_path(@event.id)%>">Modifier</a>
        </li>
        <li class="nav-item">
          <a class="btn btn-danger" href="<%= destroy_event_session_path %>" data-confirm="Êtes-vous sûr ?" data-method="DELETE">Supprimer</a>
        </li>
      </ul>
      <%end%>
    <%end%>
  </div>
  <div class="card-body">
    <h2 class="card-title"><strong><%= @event.title %></h2>
    <h4 class="card-title"><strong><%= @event.start_date.strftime("%Y-%m-%d %H:%M") %></h4>
    <h5 class="card-text">Durée : <%= @event.duration%>min</h5>
    <h6 class="card-text">Description :<%= @event.description %></h6>
    <h6 class="card-text">Prix :<%= @event.price %> €</h6>
    <h5 class="card-text">Made in Montpellier</h5>
    <h6 class="card-text">Situé à <%= @event.location %></h6>
  </div>
</div>
<br>