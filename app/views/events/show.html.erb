<% content_for :title, @event.title %>

<div class="card text-center">
  <div class="card-header">
  <% if current_user != nil %>
    <% if current_user.id == @user.id%>
      <ul class="nav nav-pills card-header-pills">
        <li class="nav-item">
          <a class="btn btn-info" href="<%= edit_event_registration_path(@event.id)%>">Modifier</a>
        </li>
        <li class="nav-item">
          <a class="btn btn-danger" href="<%= destroy_event_session_path %>" data-confirm="Êtes-vous sûr ?" data-method="DELETE">Supprimer</a>
        </li>
      </ul>
      <%end%>
    <%end%>
  </div>
  <div class="card-body">
    <h4 class="card-title"><strong><%= @event.start_date %> <%= @event.duration%></strong></h4>
    <h6 class="card-text"><%= @event.description %></h6>
    <h6 class="card-text"><%= @event.price %></h6>
    <h6 class="card-text">Evénement crée le <%= @event.created_at.strftime("%Y-%m-%d") %></h6><br>
    <h5 class="card-text">Made in Montpellier</h5><br>
    <h6 class="card-text"><%= @event.location %></h6>
  </div>
</div>
<br>