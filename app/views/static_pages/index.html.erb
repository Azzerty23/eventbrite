<div class="jumbotron"><br>
  <strong><em><h1 class="display-4">Eventbrite</h1></em></strong>
</div>

<% if current_user != nil %> 
  <div>
  <%= flash[:success] %>
  <h2>Bienvenue <%= current_user.email %> !</h2>
  </div>
<%else%>
  <div class="alert alert-primary" role="alert"><br>
    <%= flash[:danger] %>
    <p>Vous n'êtes pas connecté !<br>
    <a class="btn btn-info" href="<%= new_user_session_path %>">Se connecter</a> | <a class="btn btn-info" href="<%= new_user_registration_path %>">S'inscrire</a><br><br>
  </div>
<% end %>
<hr>
<% @events.each do |event| %>
  <div class="row">
    <div class="col-lg-6"><br>
      <h2><strong> <%= event.title %></strong></h2>
      <p><%= event.description %></p>
      <ul>
        <strong><%= event.start_date.strftime("%Y-%m-%d") %></strong><br>
        <a><%= event.attendances.count %> participants<a><br>
        <a>Prix : <%= event.price %> €<a><br><br>
        <a>Organisateur : <%= event.administrator.firstname%> <%= event.administrator.lastname %><a><br>
        <a>Contact : <%= event.administrator.email %><a><br>
      </ul>
      <a>Montpellier</a>
      <p>Rue <%= event.location %></p>
    </div>
    <div class="col-lg-6">
      <img class="img-fluid rounded" src="http://placehold.it/700x450" alt="">
    </div>
  </div><hr>
<%end%>

<% if user_signed_in? %>
    <%= link_to "Secret page", static_pages_secret_path %>
<% end %>

